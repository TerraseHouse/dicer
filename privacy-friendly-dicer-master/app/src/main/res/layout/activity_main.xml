        android:textSize="18sp"
        android:text="@string/total_results_heading"
        android:id="@+id/totalResultsHeading"
        android:layout_toRightOf="@+id/chooseDiceNumber"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"/>

