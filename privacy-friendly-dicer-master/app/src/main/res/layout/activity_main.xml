        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="0"
        android:id="@+id/totalResultsNumber"
        android:layout_toRightOf="@+id/totalResultsHeading"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"/>

